<Window
    x:Class="_4fourthPractice.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:_4fourthPractice"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1920"
    Height="1080"
    Background="#4f5781"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <TextBlock
            Grid.Column="0"
            VerticalAlignment="Center"
            FontFamily="Arial"
            FontSize="30"
            Foreground="White"
            Text="MiniLibrary" />

        <Button
            Grid.Column="1"
            Background="#2f3864"
            BorderThickness="0"
            Content="Книги"
            FontSize="30"
            Foreground="White" />

        <Button
            Grid.Column="2"
            Background="#2f3864"
            BorderThickness="0"
            Content="Добавить"
            FontSize="30"
            Foreground="White" />

        <TextBlock
            Grid.Column="3"
            VerticalAlignment="Center"
            FontFamily="Arial"
            FontSize="30"
            Foreground="White"
            Text="Камиль" />
    </Grid>
</Window>
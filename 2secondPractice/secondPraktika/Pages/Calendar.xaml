<Window
    x:Class="VerstNewWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:VerstNewWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    Background="DimGray"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="4"
            Orientation="Horizontal">
            <Menu
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
                Background="DimGray"
                BorderThickness="0"
                Foreground="LightGray">
                <MenuItem Header="File">
                    <MenuItem Header="New" />
                    <MenuItem Header="Open" />
                    <Separator />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Save As..." />
                    <Separator />
                    <MenuItem Header="Exit" />
                </MenuItem>
                <MenuItem Header="Notifications" />
                <MenuItem Header="Status">
                    <MenuItem
                        Header="Online"
                        IsCheckable="True"
                        IsChecked="True" />
                    <MenuItem Header="Offline" IsCheckable="True" />
                    <MenuItem Header="Busy" IsCheckable="True" />
                </MenuItem>
                <MenuItem Header="View" />
                <MenuItem Header="Customer">
                    <MenuItem Header="Add Customer" />
                    <MenuItem Header="Edit Customer" />
                    <MenuItem Header="Delete Customer" />
                </MenuItem>
            </Menu>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="5"
            Margin="10,0,0,0"
            Orientation="Horizontal">
            <Button
                Margin="5,0,0,0"
                Background="DimGray"
                BorderThickness="0"
                Click="Button_Click"
                Content="Customer Search"
                FontSize="25"
                Foreground="LightGray"
                RenderTransformOrigin="0.533,2.627" />
            <Button
                Margin="5,0,0,0"
                Background="DimGray"
                BorderThickness="0"
                Click="Button_Click"
                FontSize="25"
                Foreground="LightGray"
                RenderTransformOrigin="0.533,2.627">
                <TextBlock Text="Edit Customer">
                    <TextBlock.Effect>
                        <DropShadowEffect
                            BlurRadius="8"
                            Opacity="1"
                            ShadowDepth="0"
                            Color="White" />
                    </TextBlock.Effect>
                </TextBlock>
            </Button>
        </StackPanel>
        <Button
            Grid.Row="4"
            Grid.Column="8"
            Margin="2,0,0,0"
            Background="DarkGray"
            Content="Save Data"
            Foreground="White" />
        <Button
            Grid.Row="4"
            Grid.Column="9"
            Margin="2,0,2,0"
            Background="DarkGray"
            Content="Close"
            Foreground="White" />
        <StackPanel
            Grid.Row="5"
            Grid.RowSpan="10"
            Grid.Column="0"
            Grid.ColumnSpan="10"
            Margin="10,5,10,10"
            Background="Gray"
            Orientation="Horizontal">
            <StackPanel
                Grid.Row="4"
                Grid.RowSpan="5"
                Grid.Column="0"
                Grid.ColumnSpan="5"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="First Name:" />
                    <TextBox Width="200" Margin="90,5,5,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="Last Name:" />
                    <TextBox Width="200" Margin="92,5,5,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="Company Name:" />
                    <TextBox Width="200" Margin="50,5,5,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="Division:" />
                    <TextBox Width="200" Margin="110,5,5,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,5,5,5"
                        FontWeight="Heavy"
                        Text="Phone Numbers" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="Phone:" />
                    <TextBox Width="200" Margin="120,5,5,5" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        FontSize="17"
                        Foreground="White"
                        Text="Fax:" />
                    <TextBox Width="200" Margin="143,5,5,5" />
                </StackPanel>
            </StackPanel>
            <StackPanel
                Grid.Row="4"
                Grid.RowSpan="4"
                Grid.Column="6"
                Grid.ColumnSpan="3"
                Orientation="Horizontal">
                <TextBlock
                    Width="86"
                    FontSize="15"
                    Foreground="White"
                    RenderTransformOrigin="1.356,0.512"
                    Text="Birthday:" />
                <Calendar />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>